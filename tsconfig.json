{
  "compilerOptions": {

    "target": "ES6",
    "removeComments": true,
    "module": "ES6",
    "rootDir": "./src",
    "outDir": "./dev",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}

